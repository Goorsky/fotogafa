%h1 New comment

= error_messages_for :comment 

- form_for(@comment) do |f| 
  %p
    %b User
    %br
    = f.text_field :user_id
  %p
    %b Photo
    %br
    = f.text_field :photo_id    
  %p
    %b Text
    %br
    = f.text_area :text 

  %p
    = f.submit "Create"
    
= link_to 'Back', comments_path 