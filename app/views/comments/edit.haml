%h1 Editing comment

= error_messages_for :comment

- form_for(@comment) do |f|
  %p
    %b User
    = f.text_field :user_id 
  %p
    %b Photo
    %br
    = f.text_field :photo_id
  %p
    %b Text
    = f.text_area :text 
    
  %p= f.submit "Update"
  
= link_to 'Show', comment_path(@comment)
= link_to 'Back', comments_path

