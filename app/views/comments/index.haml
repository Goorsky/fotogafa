%h1 Listing comments

%table
  %tr
    %th User
    %th Text

  -for comment in @comments
    %tr
      %td=h comment.user_id
      %td=h comment.text
  
      %td= link_to 'Show', comment_path(comment)
      %td= link_to 'Edit', edit_comment_path(comment)
      %td= link_to 'Destroy', comment_path(comment), :confirm => 'Are you sure?', :method => :delete, :confirm => "Are you sure?", :method => :delete
    
= link_to 'New comment', new_comment_path 