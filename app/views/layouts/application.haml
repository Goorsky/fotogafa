%html
  %head
    %title
      Fotogafa.pl
    = javascript_include_tag :defaults
    = stylesheet_link_tag "site" 
  %body
    %div.spacer_small
    %div.silver_box
      %span{:style => "font-weight:bold; color: white; font-size: 25px; margin-right: 30px;"}
        Fotogafa.pl
      = link_to "Albumy", albums_path
      = link_to "ZdjÄ™cia", photos_path
      = link_to "Do akceptacji", waiting_photos_path
      - if current_user
        = link_to "Wyloguj", logout_path
      - else
        = link_to "Rejestracja", new_user_path
        %div{:style => "float:right; margin-top: 4px;"}
          - form_for( UserSession.new) do |f| 
            zhrID
            = f.text_field :openid_identifier, :style => "border: 1px solid black; padding: 3px; width: 120px; background-color: silver;"
            = f.submit "zaloguj", :disable_with => "trwa logowanie..."  
        
    %div
      %div.spacer
      %div.white_box 
        = yield
