%h1 Editing user

= error_messages_for :user

- form_for(@user) do |f|
  %p
    %b Username
    = f.text_field :username 
  %p
    %b Email
    = f.text_field :email 
  %p
    %b Password
    = f.text_field :password 
    
  %p= f.submit "Update"
  
= link_to 'Show', user_path(@user)
= link_to 'Back', users_path

