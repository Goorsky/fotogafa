%h1 Dodaj album

= error_messages_for :album 

- form_for @album, :html => { :multipart => true } do |f|
   
  %p
    %b Rodzic
    %br
    = f.text_field :parent_id 
  %p
    %b Nazwa
    %br
    = f.text_field :title 
  %p
    %b Opis
    %br
    = f.text_area :description 
  %p
    %b Zdjęcie tytułowe
    %br
    = f.file_field :image_file
    %br
    lub URL
    %br
    = f.text_field :image_file_url  
  %p
    = f.submit "Stwórz"
    
= link_to 'lista albumów', albums_path 